{
  "productName": "env-manager",
  "version": "1.0.0",
  "identifier": "com.env-manager.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "环境变量管理器",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "identifier": "com.env-manager.app",
    "publisher": "Environment Manager",
    "category": "Utility",
    "shortDescription": "环境变量管理器",
    "longDescription": "一个基于 Tauri 构建的现代化 Windows 桌面应用程序，用于管理系统环境变量。",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}